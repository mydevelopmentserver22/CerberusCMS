													<OPTION VALUE=\"3\">Entries :: Forum</OPTION>
													<OPTION VALUE=\"4\">Entries :: News Articles</OPTION>
													<OPTION VALUE=\"5\">Entries :: Registered Member Accounts</OPTION>
													<OPTION VALUE=\"6\">Entries :: Market</OPTION>
